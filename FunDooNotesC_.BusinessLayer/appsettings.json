{
    "ConnectionStrings": {
        // Database ka connection string define kiya gaya hai
        "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=FunDooNotesDb;Trusted_Connection=True;MultipleActiveResultSets=true"
        // "Server=(localdb)\\MSSQLLocalDB;"  -> Local database ka server name
        // "Database=FunDooNotesDb;"  -> Database ka naam
        // "Trusted_Connection=True;"  -> Windows authentication enable kiya gaya hai
        // "MultipleActiveResultSets=true"  -> Multiple queries ek saath run kar sakti hain
    },

    "Jwt": {
        // JWT token ke liye security settings
        "SecretKey": "YourSuperSecretKey123!YourSuperSecretKey",
        // "SecretKey"  -> JWT token generate karne aur verify karne ke liye secret key

        "Issuer": "FunDooNotesIssuer",
        // "Issuer"  -> Kon token generate kar raha hai (issuer ka naam)

        "Audience": "FunDooNotesAudience",
        // "Audience"  -> Kon log ye token use kar sakte hain (valid users)

        "ExpiresInHours": 1
        // "ExpiresInHours"  -> Token kitne ghante tak valid rahega (yaha 1 ghanta set hai)
    },

    "Logging": {
        // Logging configuration set kiya gaya hai
        "LogLevel": {
            "Default": "Information",
            // "Default"  -> Default logging level "Information" rakha hai

            "Microsoft.AspNetCore": "Warning"
            // "Microsoft.AspNetCore"  -> Microsoft.AspNetCore related warnings ko log karega
        }
    },

    "AllowedHosts": "*"
    // "AllowedHosts"  -> "*" ka matlab hai ki application kisi bhi host pe chal sakti hai
}
