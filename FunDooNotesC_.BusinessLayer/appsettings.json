{
    "ConnectionStrings": {
        // Yeh application ke liye database ka connection string define karta hai
        "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=FunDooNotesDb;Trusted_Connection=True;MultipleActiveResultSets=true"
        // Server = Local database (MSSQL LocalDB ka use ho raha hai)
        // Database = FunDooNotesDb (Is database ka naam hai jo use ho raha hai)
        // Trusted_Connection=True (Windows Authentication use ho raha hai)
        // MultipleActiveResultSets=True (Ek se zyada query ek sath run kar sakti hain)
    },
    "Logging": {
        // Logging settings define kar raha hai
        "LogLevel": {
            // Default logging level set kar raha hai
            "Default": "Information", // Default logging level "Information" hai, yani sirf important logs dikhengi
            "Microsoft.AspNetCore": "Warning" // ASP.NET Core se related sirf warning aur errors dikhengi
        }
    },
    "AllowedHosts": "*"
    // AllowedHosts '*' ka matlab hai ki koi bhi host is application ko access kar sakta hai
}
